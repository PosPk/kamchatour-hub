{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/**": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "EXPO_PUBLIC_API_URL": "${EXPO_PUBLIC_API_URL}"
  }
}