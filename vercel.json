{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "^/tg$", "dest": "/public/tg/index.html" },
    { "src": "^/tg/(.*)$", "dest": "/public/tg/$1" },
    { "src": "^/$", "status": 308, "headers": { "Location": "/tg" } }
  ]
}

