{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "public" } },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "installCommand": "npm ci --no-audit --no-fund --omit=dev",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
